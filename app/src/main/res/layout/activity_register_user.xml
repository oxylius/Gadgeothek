<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ch.mge.miniprojekt.gadgeothek.activities.registerUser">

    <TextView
        android:text="@string/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/register"/>
    //Mail
    <TextView
        android:text="@string/mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextViewMail"
        android:layout_below="@id/register"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/EditTextMail"
        android:layout_below="@id/TextViewMail"
        android:inputType="textEmailAddress"/>
    //Password
    <TextView
        android:text="@string/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextViewPassword"
        android:layout_below="@id/EditTextMail"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/TextViewPassword"
        android:id="@+id/EditTextPassword"
        android:inputType="textPassword"/>
    //Name
    <TextView
        android:text="@string/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextViewName"
        android:layout_below="@id/EditTextPassword"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/TextViewName"
        android:id="@+id/EditTextName"
        android:inputType="text"/>
    //Address
    <TextView
        android:text="@string/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextViewAddress"
        android:layout_below="@id/EditTextName"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/TextViewAddress"
        android:id="@+id/EditTextAddress"
        android:inputType="text"/>
    //Matrikelnumber
    <TextView
        android:text="@string/Matrikelnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextViewMatrikelnumber"
        android:layout_below="@id/EditTextAddress"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/TextViewMatrikelnumber"
        android:id="@+id/EditTextMatrikelnumber"
        android:inputType="text"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/EditTextMatrikelnumber"
        android:text="@string/register"
        android:id="@+id/regButton"/>

</RelativeLayout>
